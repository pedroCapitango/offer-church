generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}
model Movimento {
  id           Int      @id @default(autoincrement())
  tipo         TipoContribuicao
  nome         String
  contato      String
  valor        Float
  tipoOferta   String?  // s√≥ quando for oferta
  comprovante  String?
  data         DateTime @default(now())
}

enum TipoContribuicao {
  DIZIMO
  OFERTA
}

model Usuario {
  id       Int    @id @default(autoincrement())
  usuario  String @unique
  senha    String // hash bcrypt
  role     Role   @default(TESOUREIRO)
}

enum Role {
  TESOUREIRO
  ADMIN
}
